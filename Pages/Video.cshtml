@page
@model ContentVisorDemo.Pages.VideoModel
@{
    ViewData["Title"] = "Трендовое видео";
    var videoId = Request.Query["id"].FirstOrDefault() ?? "1";
}

<div class="container">
    <h1>🎥 Трендовое видео #@videoId</h1>

    <div class="text-center mt-4">
        <video width="800" controls autoplay>
            <source src="/videos/video@(videoId).mp4" type="video/mp4">
            Ваш браузер не поддерживает видео тег.
        </video>
    </div>

    <div class="text-center mt-3">
        <a href="/" class="btn btn-outline-secondary">← Назад к списку видео</a>
    </div>
</div>